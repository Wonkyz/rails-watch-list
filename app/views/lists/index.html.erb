<div class="container my-5">
  <h1 class="mb-4">Toutes les listes</h1>

  <%= link_to "CrÃ©er une nouvelle liste", new_list_path, class: "btn btn-primary mb-4" %>

  <% if @lists.any? %>
    <div class="list-group mb-5">
      <% @lists.each do |list| %>
        <%= link_to list.name, list_path(list), class: "list-group-item list-group-item-action" %>
      <% end %>
    </div>
  <% else %>
    <p>Aucune liste disponible pour le moment.</p>
  <% end %>

  <h2 class="mb-4">Tous les films</h2>

  <% if @movies.any? %>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= truncate(movie.overview, length: 100) %></p>
              <p>Note : <%= movie.rating %> / 10</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Aucun film disponible pour le moment.</p>
  <% end %>
</div>
